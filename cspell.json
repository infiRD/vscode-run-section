// cSpell Settings
{
    // Version of the setting file.  Always 0.2
    "version": "0.2",
    // language - current active spelling language
    "language": "en",
    // allow words like: errormessage
    // per-file equivalent: spellchecker: enableCompoundWords
    "allowCompoundWords": true,
    "useGitignore": true,
    // words - list of words to be always considered correct
    "dictionaries": [
        "jargon",
        "entities"
    ],
    // Define each dictionary.  Relative paths are relative to the config file
    "dictionaryDefinitions": [
        {
            "name": "jargon",
            "path": ".cspell/dict/jargon.txt"
        },
        {
            "name": "entities",
            "path": ".cspell/dict/entities.txt"
        }
    ]
}
